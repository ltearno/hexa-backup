{
    "compilerOptions": {
        "lib": ["es2022"],
        "module": "commonjs",
        "target": "ESNext",
        //"esModuleInterop": true,

        "rootDir": "src",
        "outDir": "target",
        "sourceMap": true,
        "declaration": true,
        "listFiles": false,
        "emitBOM": true,
        "diagnostics": true,
        "moduleResolution": "nodenext",
        "paths": {
            "strtok3/core": [
                "./node_modules/strtok3/lib"
            ]
        }
    },
    "exclude": [
        "node_modules",
        "target",
        "tempbackup",
        ".hb-object",
        ".hb-refs",
        ".hb-cache"
    ]
}